{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile Current LaTeX Report",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/lastex.py",
                "build",
                "${relativeFile}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean Temporary Files",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/lastex.py",
                "clean",
                "${relativeFileDirname}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            }
        }
    ]
}