%  --- Добавление центрального заголовка без номера
\newcommand{\centeredsection}[1]{
    \noindent
    \begin{center}
        \textbf{\normalsize #1}
    \end{center}
    \par
}

\RenewDocumentCommand{\texttt}{m}{\mintinline{text}§#1§}

